{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0.0",
  "description": "A simple note-taking extension that saves your thoughts as organized cards",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "action": {
    "default_title": "Open Quick Notes"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}